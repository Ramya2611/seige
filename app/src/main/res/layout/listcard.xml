<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#E0E0E0">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:id="@+id/card_view"
        card_view:cardCornerRadius="5dp"
        card_view:cardUseCompatPadding="true"
        card_view:cardElevation="4dp"
        card_view:cardPreventCornerOverlap="false">
        <RelativeLayout

            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">




            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_margin="8dp">

                <ImageView
                    android:id="@+id/img"
                    android:layout_width="119dp"
                    android:layout_height="119dp"
                    android:src="@mipmap/ic_launcher_round" />


                <TextView
                    android:id="@+id/Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:text="NAME"
                    android:textStyle="bold"
                    android:layout_marginLeft="125dp"
                    android:layout_marginBottom="0dp"/>



                <TextView
                    android:id="@+id/Address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="125dp"
                    android:layout_below="@id/Name"
                    android:text="no 3,like this many streets go by this name for years this is"
                    android:textStyle="normal"/>


                <TextView
                    android:id="@+id/Landmark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="0dp"
                    android:layout_marginLeft="125dp"
                    android:text="Landmark"
                    android:layout_below="@id/Address"
                    android:textStyle="normal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:id="@+id/capacityLayout">
                <TextView
                    android:id="@+id/Capacity_remianing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:text="Capacity :"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:id="@+id/remainingCapacity"
                    android:textColor="@color/colorGreen"
                    android:text="0"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/"
                    android:id="@+id/fslash"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:id="@+id/Capacity_remianingd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="0dp"
                    android:text="500"
                    android:textColor="@color/colorGreen"/>
    </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/capacityLayout"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="20dp">

                <TextView
                    android:id="@+id/Capacity_Contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="100dp"
                    android:layout_marginTop="8dp"
                    android:text="Contact :"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/Capacity_Contactd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9865960232"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="0dp"/>
    </LinearLayout>
            </RelativeLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
